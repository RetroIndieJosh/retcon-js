{
        "compilerOptions": {
                "esModuleInterop": true,
                "forceConsistentCasingInFileNames": true,
                "module": "commonjs",
                "noImplicitAny": true,
                "outDir": "js",
                "preserveConstEnums": true,
                "removeComments": true,
                "skipLibCheck": true,
                "sourceMap": true,
                "strict": true,
                "target": "ES2015"
        },
        "files": [
                "Color.ts",
                "Palette.ts",
                "Surface.ts",
                "Video.ts",
                "Tile.ts",
                "Tilemap.ts",
                "Sprite.ts",
                "retcon.ts",
                "Test.ts"
        ],
        "$schema": "https://json.schemastore.org/tsconfig",
        "display": "Recommended"
}
