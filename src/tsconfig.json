{
        "compilerOptions": {
                "esModuleInterop": true,
                "forceConsistentCasingInFileNames": true,
                "module": "commonjs",
                "noImplicitAny": true,
                "outDir": "js",
                "preserveConstEnums": true,
                "removeComments": true,
                "skipLibCheck": true,
                "sourceMap": true,
                "strict": true,
                "target": "ES2015"
        },
        "files": [
                "Math.ts",
                "Loggable.ts",
                "Coord.ts",
                "NumberGrid.ts",
                "Color.ts",
                "Palette.ts",
                "Surface.ts",
                "Video.ts",
                "Tile.ts",
                "Tilemap.ts",
                "Sprite.ts",
                "Actor.ts",
                "Input.ts",
                "retcon.ts",
                "NumberGridTest.ts",
                "Test.ts",
                "metronome/metronome.ts",
                "metronome/metronomeworker.ts",

                "Key.ts",
                "Player.ts",
                "Door.ts",
                "LowRezJam.ts"
        ],
        "$schema": "https://json.schemastore.org/tsconfig",
        "display": "Recommended"
}
